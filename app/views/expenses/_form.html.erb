<div class="expense-form">
<%= form_with(model: expense, url: user_group_expenses_path) do |form| %>
  <div class="form-header">
    <h2 class="form-title">Add expense</h2>
  </div>

  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class='field p-4'>
    <%= form.label :amount, class: '' %>
    <%= form.text_field :amount, class:'' %>
  </div>

  <div class= "form-group">
    <label class="form-label">Select a category</label>
    <%= form.select :group_id, @group.all.collect {|u| [u.name.capitalize, u.id] }, class:'' %>
  </div>

  <div class= "form-group">
    <%= form.submit "Add transaction", class: '' %>
  </div>
<% end %>
</div>