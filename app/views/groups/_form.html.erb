<%= render partial: 'shared/nav', locals: {title:'CATEGORY', symbol:'â†', url: user_groups_path}%>

<%= form_with model: group, url: user_groups_path, local: true, multipart: true  do |form| %>  
  <div class="category-form">
    <h3 > Add New Category </h3>
      <div class="form-field">
      <% form.label :name  %>
      <%= form.text_field :name, placeholder: "Category Name", class: "login-field"%>
      <% form.object.errors.full_messages_for(:name).each do |message|%>
      <div><%= message %></div>
      <%end%>
    </div>
      <br>
     <div class="form-field">
    <%= form.label :icon, 'Chose icon:', class: 'label' %><br>
      <%= form.file_field :icon, class: "select-icon" %>
        <% form.object.errors.full_messages_for(:icon).each do |message|%>
        <div><%= message %></div>
        <%end%>
     </div>
     <br>
      <%= form.submit "Create Category", class:"category-button"%>
    </div>
<%end%>