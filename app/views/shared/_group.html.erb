<div class="group-wrapper">
<div class="group-wrapper-image">
    
<%= image_tag(group.icon, alt: 'Image Description', class: 'group-icon') %>

</div>
 <div class="group-wrapper-detail">
 <div class="group-detail">
<h2 class="group-user-name"><%= link_to group.name, user_group_path(group.user, group) %></h2>
<p class="expense-amount"> $<%= group.expenses.sum(:amount) %></p>
</div>
<p class="date"> <%= group.created_at.strftime("%d %b %Y") %></p>

</div>
</div>
